{
  "name": "DarkroomPy",
  "version": "0.1.0",
  "description": ">We have darkroom at home. >Darkroom at home: DarkroomPy",
  "main": "desktop/main.js",
  "scripts": {
    "start": "electron .",
    "build:backend": "python desktop/build_backend.py",
    "dist": "npm run build:backend && electron-builder",
    "dist:win": "npm run build:backend && electron-builder --win",
    "dist:mac": "npm run build:backend && electron-builder --mac",
    "dist:linux": "npm run build:backend && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Marcin Zawalski<zawalskimarcin@gmail.com>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.darkroom.py",
    "productName": "DarkroomPy",
    "directories": {
      "output": "dist",
      "buildResources": "media"
    },
    "files": [
      "desktop/main.js",
      "desktop/splash.html",
      "desktop/error.html",
      "desktop/bin/darkroompy/**/*",
      "media/**/*"
    ],
    "extraResources": [
      {
        "from": "desktop/bin/darkroompy",
        "to": "darkroompy",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics",
      "icon": "media/icons"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "media/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "shortcutName": "DarkroomPy",
      "installerIcon": "media/icons/icon.ico",
      "uninstallerIcon": "media/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "public.app-category.photography",
      "entitlements": "desktop/entitlements.mac.plist",
      "entitlementsInherit": "desktop/entitlements.mac.plist",
      "hardenedRuntime": true
    }
  }
}